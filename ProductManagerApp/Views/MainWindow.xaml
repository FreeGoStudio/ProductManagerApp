<Window x:Class="ProductManagerApp.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="商品管理系统" Height="450" Width="700">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
    </Window.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- 顶部输入区域 -->
        <StackPanel Orientation="Horizontal" Margin="0 0 0 10">

            <!--商品名称输入框，带灰色默认提示-->
            <!--
            <TextBox x:Name="txtName" Width="150" Margin="0,0,5,0" />
            <TextBox x:Name="txtPrice" Width="100" Margin="0,0,5,0"/>
            <TextBox x:Name="txtStock" Width="80" Margin="0,0,5,0" />-->

            <!-- 商品名称输入框 -->
            <Grid Margin="0,0,5,0">
                <TextBox x:Name="txtName"
                 Width="150"
                 Padding="5"
                 VerticalContentAlignment="Center"/>
                <TextBlock Text="请输入商品名称"
                   Foreground="Gray"
                   Margin="8,0,0,0"
                   VerticalAlignment="Center"
                   IsHitTestVisible="False"
                   Visibility="{Binding Text.IsEmpty, ElementName=txtName, Converter={StaticResource BoolToVisibilityConverter}}"/>
            </Grid>

            <!-- 商品价格输入框 -->
            <Grid Margin="0,0,5,0">
                <TextBox x:Name="txtPrice"
                 Width="100"
                 Padding="5"
                 VerticalContentAlignment="Center"/>
                <TextBlock Text="请输入价格"
                   Foreground="Gray"
                   Margin="8,0,0,0"
                   VerticalAlignment="Center"
                   IsHitTestVisible="False"
                   Visibility="{Binding Text.IsEmpty, ElementName=txtPrice, Converter={StaticResource BoolToVisibilityConverter}}"/>
            </Grid>

            <!-- 商品库存输入框 -->
            <Grid Margin="0,0,5,0">
                <TextBox x:Name="txtStock"
                 Width="80"
                 Padding="5"
                 VerticalContentAlignment="Center"/>
                <TextBlock Text="请输入库存"
                   Foreground="Gray"
                   Margin="8,0,0,0"
                   VerticalAlignment="Center"
                   IsHitTestVisible="False"
                   Visibility="{Binding Text.IsEmpty, ElementName=txtStock, Converter={StaticResource BoolToVisibilityConverter}}"/>
            </Grid>

            <Grid Margin="0,0,5,0">
                <TextBox x:Name="txtDescription"
                Width="80"
                Padding="5"
                VerticalContentAlignment="Center"/>        
                <TextBlock Text="请输入描述"
                 Foreground="Gray"
                 Margin="8,0,0,0"
                 VerticalAlignment="Center"
                 IsHitTestVisible="False"
                 Visibility="{Binding Text.IsEmpty, ElementName=txtStock, Converter={StaticResource BoolToVisibilityConverter}}"/>
            </Grid>

            <!-- 按钮 -->
            <Button Content="添加" Width="80" Click="BtnAdd_Click" Margin="5,0"/>
            <Button Content="刷新" Width="80" Click="BtnRefresh_Click" Margin="5,0"/>
        </StackPanel>

        <!-- 数据表格显示商品列表 -->
        <DataGrid x:Name="dataGrid"
                  Grid.Row="1"
                  AutoGenerateColumns="True" 
                  IsReadOnly="True"
                  SelectionMode="Single"
                  Margin="0,10,0,0"/>
    </Grid>
</Window>


